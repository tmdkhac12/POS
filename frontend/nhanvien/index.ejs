<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nhan Vien POS</title>

    <!-- BS5 CSS & JS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" defer> </script>

    <!-- My CSS -->
    <link rel="stylesheet" href="/nhanvien/css/style.css">
    <link rel="stylesheet" href="/nhanvien/css/notification.css">

    <!-- Icon -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>

<body>
    <nav class="navbar navbar-expand-sm bg-danger justify-content-end p-2">
        <span class="m-0 text-white" style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%);">Bàn</span>

        <div class="notification-container me-2">
            <button class="notification-btn" id="notificationBtn">
                <i class="bi-bell-fill"></i>
                <span class="notification-badge" style="display: none;">0</span>
            </button>

            <div class="notification-dropdown" id="notificationDropdown">
                <div class="notification-header">
                    <h6 class="notification-title">Notifications</h6>
                </div>

                <ul class="notification-list">
                    <% for (const noti of notifications) { %>
                    <li class="notification-item <%= noti.trang_thai === 0 ? "unread" : "read" %>" data-id="<%= noti.ma_thong_bao %>" data-time="<%= noti.thoi_gian_tao %>">
                        <div class="notification-icon <%= noti.phan_loai === "Gọi món" ? "order" : "payment" %>">
                            <i class="<%= noti.phan_loai === "Gọi món" ? "bi bi-bag" : "bi bi-credit-card" %>"></i>
                        </div>
                        <div class="notification-text">
                            <p class="notification-message"><%= noti.noi_dung %></p>
                            <span class="notification-time">0 minutes ago</span>
                        </div>
                        <button class="check-btn <%= noti.trang_thai === 1 ? "checked" : "" %>">
                            <i class="bi bi-check"></i>
                        </button>
                    </li>
                    <% } %>
                    <div id="loading" style="text-align:center; opacity: 0.5; display:none;">Đang tải...</div>
                </ul>
            </div>
        </div>

        <button class="btn btn-light ml-auto" data-bs-toggle="modal" data-bs-target="#logoutModal">Đăng xuất</button>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <% for (const table of tables) { %>
            <div class="col-2">
                <div class="card shadow-sm table-card" id="table-<%= table.ma_ban %>" data-table-id="<%= table.ma_ban %>" data-status="<%= table.trang_thai === 'Trống' ? 'empty' : 'occupied' %>">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <p class="card-text m-0 fw-light"><%= table.trang_thai === "Trống" ? "Bàn trống" : "Xem chi tiết" %></p>
                        <a href="./chitiet/<%= table.ma_ban %>" class="stretched-link">
                            <i style="font-size:16px" class="fa fas fa-chevron-right"></i>
                        </a>
                    </div>
                    <div class="card-body py-5">
                        <p class="card-text text-center fw-bolder"><%= table.ten_ban %></p>
                    </div>
                </div>
            </div>
            <% } %>
        </div>
    </div>

    <!-- Logout modal -->
    <div class="modal fade" id="logoutModal" tabindex="-1" aria-labelledby="logoutModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header" style="background-color: #212529; color: #FFFFFF; border-bottom: none;">
                    <h5 class="modal-title" id="logoutModalLabel">Xác nhận đăng xuất</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body text-center py-4">
                    <i class="fas fa-sign-out-alt fa-3x text-secondary mb-3"></i>
                    <p class="mb-0">Bạn có chắc chắn muốn đăng xuất?</p>
                </div>
                <div class="modal-footer justify-content-center border-top-0">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="button" class="btn btn-primary text-white" style="background-color: #343A40; border-color: #343A40;" id="confirmLogout">Đồng ý</button>
                </div>
            </div>
        </div>
    </div>

    <script src="/nhanvien/js/logout.js"></script>
    <script src="/nhanvien/js/notification.js"></script>
    <script src="/nhanvien/js/util.js"></script>

    <script src="/socket.io/socket.io.js"></script>
    <script src="/nhanvien/js/socket.js"></script>
</body>

</html>