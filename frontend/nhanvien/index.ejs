<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nhan Vien POS</title>

    <!-- BS5 CSS & JS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" defer> </script>

    <!-- My CSS -->
    <link rel="stylesheet" href="./css/style.css">

    <!-- Icon -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body>
    <nav class="navbar navbar-expand-sm bg-danger justify-content-center p-2">
        <p class="m-0 text-white flex-fill text-center">Bàn</p>
        <button class="btn btn-outline-dark ml-auto" data-toggle="modal" data-target="#myModal">Đăng xuất</button>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <% for (const table of tables) { %>

            <div class="col-2">
                <div class="card shadow-sm table-card" id="table-<%= table.ma_ban %>" data-table-id="<%= table.ma_ban %>" data-status="<%= table.trang_thai === 'Trống' ? 'empty' : 'occupied' %>">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <p class="card-text m-0 fw-light"><%= table.trang_thai === "Trống" ? "Bàn trống" : "Xem chi tiết" %></p>
                        <a href="./chitiet/<%= table.ma_ban %>" class="stretched-link">
                            <i style="font-size:16px" class="fa fas fa-chevron-right"></i>
                        </a>
                    </div>
                    <div class="card-body py-5">
                        <p class="card-text text-center fw-bolder"><%= table.ten_ban %></p>
                    </div>
                </div>
            </div>
            
            <% } %>
        </div>
    </div>

    <div class="modal " id="myModal">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">

                <!-- Modal body -->
                <div class="modal-body">
                    <h4>Đăng xuất <i class="fa fa-lock"></i></h4>
                    <p class="mt-4">
                        <i class="fa fa-question-circle"></i> <span>Bạn có chắc muốn đăng xuất??</span>
                    </p>
                    <a class="btn btn-danger btn-block my-4">Đăng xuất</a>

                </div>
                
            </div>
        </div>
    </div>

    <!-- My JS -->
    <script src="./js/main.js"></script>
</body>

</html>