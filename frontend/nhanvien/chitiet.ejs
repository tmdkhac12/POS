<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nhan Vien / Chi Tiet Order</title>

    <!-- BS5 CSS & JS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" defer> </script>

    <!-- My CSS -->
    <link rel="stylesheet" href="../css/chitiet.css">
    <link rel="stylesheet" href="../css/nav.css">

    <!-- Icon -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

</head>

<body>
    <nav class="navbar navbar-expand-sm bg-danger p-2">
        <a href="/nhanvien" class=""><i class="fa fa-arrow-left" aria-hidden="true"></i></a>
        <p class="m-auto text-white">Chi Tiết <%= tableInfo.ten_ban %></p>
    </nav>

    <div class="container-fluid h-90">
        <div class="row h-100">
            <!-- Food card Section -->
            <div class="col-6">
                <!-- Nav bar -->
                <nav class="py-2">
                    <div class="d-flex align-items-center">
                        <button class="nav-arrow" id="prevBtn" disabled>
                            <i class="bi bi-chevron-left"></i>
                        </button>

                        <div class="menu-container" id="menu-container">
                            <!-- EJS sẽ render ra danh sách nav item -->
                            <% for (let i = 0; i < groups.length; i++) { %>
                            <button class="menu-btn" data-index="<%= i %>">
                                <img src="/khachhang/images/group/<%= groups[i].hinh_anh %>" alt="<%= groups[i].hinh_anh %>">
                                <h6 class="mb-0 mt-2"><%= groups[i].ten_nhom %></h6>
                            </button>
                            <% } %>
                        </div>

                        <button class="nav-arrow ms-auto" id="nextBtn">
                            <i class="bi bi-chevron-right"></i>
                        </button>
                    </div>
                </nav>

                <!-- Food Card Items -->
                <div class="row" id="food-items">
                    <!-- JS sẽ render món tại đây -->
                </div>
            </div>

            <!-- Orders  -->
            <div class="col-6 pe-0" id="order-section">
                <div class="card h-100">
                    <!-- Card Header -->
                    <div class="card-header">
                        <h4>Thông Tin Đơn Hàng</h4>
                    </div>

                    <!-- Card Body -->
                    <div class="card-body p-0">
                        <ul class="list-group">
                            <!-- An Item  -->
                            <li class="list-group-item list-group-item-action">
                                <div class="row">
                                    <div class="col-4">
                                        <p class="font-weight-bold">Tra Dao</p>
                                        <p>25,000</p>
                                    </div>
                                    <div class="col-8 d-flex justify-content-between align-items-center">
                                        <a href="#" class="text-muted"><i class="fa fa-edit"></i></a>

                                        <div class="d-flex justify-content-center">
                                            <button type="button" class="quantity-left-minus btn btn-outline-secondary btn-number" data-type="minus">
                                                <i class="fa fa-minus" aria-hidden="true"></i>
                                            </button>
                                            <input type="text" id="quantity" name="quantity" style="width: 25%;" class="input-number text-center" value="1" min="1" max="100">
                                            <button type="button" class="quantity-right-plus btn btn-outline-secondary btn-number" data-type="plus">
                                                <i class="fa fa-plus" aria-hidden="true"></i>
                                            </button>
                                        </div>

                                        <p class="font-weight-bold">25,000</p>
                                        <a href="#" class="text-muted">
                                            <i class="fa fa-trash" aria-hidden="true"></i>
                                        </a>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>

                    <div class="card-footer">
                        <div class="total text-end">
                            <p>Thành Tiền</p>
                            <p class="font-weight-bold text-success">25,000</p>
                        </div>

                        <div class="buttons d-flex">
                            <button type="button" class="btn btn-primary flex-grow-1 mr-1">Lưu</button>
                            <button type="button" class="btn btn-danger flex-grow-1 ml-1">Thanh Toán</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="dishes-data-json" style="display:none;"><%- JSON.stringify(dishes) %></div>
    
    <!-- My JS -->
    <script src="../js/chitiet_listorder.js"></script>
    <script src="../js/chitiet_nav.js"></script>
    <script>
        window.addEventListener("scroll", function() {
            const sidebar = document.querySelector("#order-section");

            if (window.scrollY >= 39) {
                sidebar.style.height = "100vh";
            } else {
                sidebar.style.height = "calc(100vh - 40px)";
            }
        });
    </script>

</body>

</html>