<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thanh toán</title>

    <!-- BS5 CSS & JS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" defer> </script>

    <!-- Icon -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <!-- My CSS -->
    <link rel="stylesheet" href="/nhanvien/css/payment.css">
</head>

<body>
    <div class="container-fluid">
        <h1 class="text-danger text-center fw-bold">TRANG THANH TOÁN</h1>

        <div class="row" style="height: calc(100vh - 60px);">
            <!-- Payment content -->
            <div class="col-8">
                <h4 class="pb-2" style="border-bottom: 2px solid #ecf0f1;">Nhập thông tin thanh toán</h4>

                <div class="customer-phone-container d-flex my-3">
                    <form id="customer-phone" class="flex-fill me-2">
                        <div class="input-group me-2">
                            <input type="number" class="form-control" placeholder="Nhập số điện thoại khách hàng" required>
                            <button class="btn btn-primary" type="submit">OK</button>
                        </div>
                    </form>

                    <!-- Btn thêm khách hàng mới -->
                    <button class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#add-customer-modal">
                        <i class="bi bi-person-plus"></i>
                    </button>

                    <!-- Modal thêm khách hàng mới -->
                    <div class="modal" id="add-customer-modal">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <!-- Modal Header -->
                                <div class="modal-header">
                                    <h4 class="modal-title">Thêm khách hàng</h4>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                </div>

                                <!-- Modal body -->
                                <div class="modal-body">
                                    <form>
                                        <label for="customer-name" class="form-label">Tên khách hàng</label><br>
                                        <input type="text" class="form-control input-name" name="customer-name"><br>

                                        <label for="customer-phone" class="form-label">Số điện thoại</label><br>
                                        <input type="text" class="form-control input-phone" name="customer-phone"><br>

                                        <label for="customer-total" class="form-label">Tổng chi tiêu</label><br>
                                        <input type="text" class="form-control input-total" name="customer-total" value="0" disabled><br>

                                        <label for="customer-accu" class="form-label">Tiền tích lũy</label><br>
                                        <input type="text" class="form-control input-accu" name="customer-accu" value="0" disabled><br>

                                        <label for="rank" class="form-label">Cấp bậc</label><br>
                                        <select name="rank" class="form-select" disabled>
                                            <option value="copper">Đồng</option>
                                        </select>
                                    </form>
                                </div>

                                <!-- Modal footer -->
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                                    <button type="button" class="btn btn-primary save">Thêm</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="payment-methods my-3">
                    <div class="payment-method selected" data-method="Tiền mặt">
                        <i class="fas fa-money-bill-wave"></i>
                        <div>Tiền mặt</div>
                    </div>
                    <div class="payment-method" data-method="Thẻ">
                        <i class="fas fa-credit-card"></i>
                        <div>Thẻ</div>
                    </div>
                    <div class="payment-method" data-method="Chuyển khoản">
                        <i class="fas fa-university"></i>
                        <div>Chuyển khoản</div>
                    </div>
                </div>

                <form id="payment-info" class="my-3">
                    <label class="form-label">Tên khách hàng</label>
                    <input type="text" class="form-control customer-name" disabled>
                    <label class="form-label">Tiền tích lũy</label>
                    <input type="text" class="form-control customer-accu" disabled>
                    <label class="form-label">Số tiền muốn sử dụng</label>
                    <input type="number" class="form-control customer-use" disabled>
                </form>

                <div class="btn-container mt-3">
                    <button class="btn btn-primary p-3 w-100 fw-bold text-uppercase" style="font-size: 20px;" id="payment-btn">Xác nhận thanh toán</button>
                </div>
            </div>

            <!-- Orders Content -->
            <div class="col-4 d-flex flex-column">
                <h4 class="pb-2" style="border-bottom: 2px solid #ecf0f1;">Thông tin đơn hàng</h4>

                <ul class="list-group" id="cart-container">
                    <% let totalPrice = 0; %>

                    <% for (let i = 0; i < orders.length; i++) { %>
                        <li class="list-group-item cart-item d-flex">
                            <img src="/dishes/<%= orders[i].hinh_anh %>" alt="<%= orders[i].ten_mon_an %>">
                            <div class="cart-item-details">
                                <p class="fw-bold"><span class="text-danger"><%= i + 1 %>. </span><%= orders[i].ten_mon_an %></p>
                                <p>Số lượng: <span class="quantity"><%= orders[i].so_luong %></span></p>
                                <p class="text-danger price fw-bold"><%= orders[i].don_gia_ap_dung.toLocaleString("vi-VN") %>đ</p>
                            </div>
                        </li>

                        <% totalPrice += orders[i].don_gia_ap_dung * orders[i].so_luong %>
                    <% } %>
                </ul>

                <div class="">
                    <p class="fw-bold" data-total="<%= totalPrice %>">Tổng tiền: <span class="total-price text-danger"><%= totalPrice.toLocaleString("vi-VN") %>đ</span></p>
                    <p class="fw-bold">Giảm giá: <span class="discount text-success">0đ</span></p>
                    <p class="fw-bold">Phải thanh toán: <span class="final-price text-danger"><%= totalPrice.toLocaleString("vi-VN") %>đ</span></p>
                </div>
            </div>
        </div>
    </div>

    <!-- My JS -->
    <script src="/nhanvien/js/payment.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/nhanvien/js/socket.js"></script>
</body>

</html>