<!-- Category Tab -->
<div class="tab-pane fade" id="category">
    <header>
        <h3>Phân loại</h3>
    </header>

    <div class="text-end">
        <button class="btn btn-primary my-2 me-3 ms-auto" id="add-category-btn" data-bs-toggle="modal" data-bs-target="#add-category-modal">Thêm phân loại</button>
    </div>

    <div class="table-container p-3 border border-1">
        <div class="form-outline" data-mdb-input-init>
            <input type="search" id="form1" class="form-control" placeholder="Tìm kiếm..." aria-label="Search" />
        </div>

        <table class="table table-bordered mt-3" id="phanloai-table">
            <thead>
                <tr>
                    <th style="width: 15%;">Mã phân loại</th>
                    <th>Tên phân loại</th>
                    <th style="width: 25%;">Hành động</th>
                </tr>
            </thead>
            <tbody>
                <% for (const nhom of nhoms) { %>
                    <tr>
                        <td><%= nhom.ma_nhom %></td>
                        <td><%= nhom.ten_nhom %></td>
                        <td>
                            <div class="d-flex gap-2 justify-content-center" data-id="<%= nhom.ma_nhom %>" data-name="<%= nhom.ten_nhom %>" data-img="<%= nhom.hinh_anh %>">
                                <button class="btn btn-warning update-category-btn">Cập nhật</button>
                                <button class="btn btn-danger delete-category-btn">Xóa</button>
                            </div>
                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>

    <ul class="pagination justify-content-end pt-3" id="category-pagination">
        <% const numberOfNhom = Math.ceil(nhomCount / 8) %>
        <li class="page-item prev-btn"><a class="page-link" href="#">Trang trước</a></li>
        <li class="page-item page-item-btn active" data-page="1"><a class="page-link" href="#">1</a></li>
        <% for (let i = 2; i <= numberOfNhom; i++) { %>
            <li class="page-item page-item-btn" data-page="<%= i %>"><a class="page-link" href="#"><%= i %></a></li>
        <% } %>
        <li class="page-item next-btn"><a class="page-link" href="#">Trang sau</a></li>
    </ul>

    <div class="modal" id="add-category-modal">
        <div class="modal-dialog">
            <div class="modal-content">
                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Thêm phân loại</h4>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    <form action="" enctype="multipart/form-data">
                        <label for="category-name" class="form-label">Tên phân loại</label><br>
                        <input type="text" class="form-control input-name" name="category-name" placeholder="Đồ chiên..."><br>
                        <label for="category-name" class="form-label">Hình ảnh</label><br>
                        <input type="file" class="form-control input-file" name="myfile">
                    </form>
                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                    <button type="button" class="btn btn-primary save">Thêm</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal" id="update-category-modal">
        <div class="modal-dialog">
            <div class="modal-content">
                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Sửa thông tin phân loại</h4>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    <form action="" enctype="multipart/form-data">
                        <label for="category-name" class="form-label">Tên phân loại</label><br>
                        <input type="text" class="form-control input-name" name="category-name" placeholder="Đồ chiên..."><br>
                        <label for="category-name" class="form-label">Hình ảnh</label><br>
                        <input type="file" class="form-control input-file" name="myfile">
                        <img src="" class="mt-3 preview-image">
                    </form>
                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                    <button type="submit" class="btn btn-primary save">Lưu thay đổi</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal" id="delete-category-modal">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <!-- Modal Header -->
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">Xác nhận xóa</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Đóng"></button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    Bạn có chắc chắn muốn xóa phân loại <span class="fw-bold text-danger category-name"></span> không?
                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Không</button>
                    <button type="button" class="btn btn-danger yes">Có</button>
                </div>
            </div>
        </div>
    </div>
</div>