<!-- Table Tab -->
<div class="tab-pane fade" id="table">
    <header>
        <h3>Bàn</h3>
    </header>

    <div class="table-container p-3 border border-1">
        <div class="form-outline" data-mdb-input-init>
            <input type="search" id="form1" class="form-control" placeholder="Tìm kiếm..." aria-label="Search" />
        </div>

        <table class="table table-bordered mt-3 mb-0" id="ban-table">
            <thead>
                <tr>
                    <th style="width: 15%;">Mã bàn</th>
                    <th>Tên bàn</th>
                    <th style="width: 25%;">Hành động</th>
                </tr>
            </thead>

            <tbody>
                <% for (const ban of bans) { %>
                <tr>
                    <td><%= ban.ma_ban %></td>
                    <td><%= ban.ten_ban %></td>
                    <td>
                        <div class="d-flex gap-2 justify-content-center">
                            <button class="btn btn-warning">Cập nhật</button>
                            <button class="btn btn-danger">Xóa</button>
                        </div>
                    </td>
                </tr>
                <% } %>
            </tbody>
        </table>
    </div>

    <ul class="pagination justify-content-end pt-3" id="table-pagination">
        <% const numberOfTables = Math.ceil(banCount / 8) %>
        <li class="page-item"><a class="page-link" href="#">Trang trước</a></li>
        <li class="page-item page-item-btn active" data-page="1"><a class="page-link" href="#">1</a></li>
        <% for (let i = 2; i <= numberOfTables; i++) { %>
            <li class="page-item page-item-btn" data-page="<%= i %>"><a class="page-link" href="#"><%= i %></a></li>
        <% } %>
        <li class="page-item"><a class="page-link" href="#">Trang sau</a></li>
    </ul>
</div>