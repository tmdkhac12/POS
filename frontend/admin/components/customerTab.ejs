<!-- Customer tab -->
<div class="tab-pane fade" id="customer">
    <header>
        <h3>Khách hàng</h3>
    </header>

    <div class="table-container p-3 border border-1">
        <div class="form-outline" data-mdb-input-init>
            <input type="search" id="form1" class="form-control" placeholder="Tìm kiếm..." aria-label="Search" />
        </div>

        <table class="table table-bordered mt-3">
            <thead>
                <tr>
                    <th style="width: 10%;">Mã khách hàng</th>
                    <th>Tên khách hàng</th>
                    <th>Số điện thoại</th>
                    <th>Tổng chi tiêu</th>
                    <th>Tiền tích lũy</th>
                    <th>Cấp bậc</th>
                    <th style="width: 25%;">Hành động</th>
                </tr>
            </thead>
            <tbody>
                <% for (const khachHang of khachHangs) { %>
                    <tr>
                        <td><%= khachHang.ma_khach_hang %></td>
                        <td><%= khachHang.ten_khach_hang %></td>
                        <td><%= khachHang.so_dien_thoai %></td>
                        <td><%= khachHang.tong_chi_tieu %></td>
                        <td><%= khachHang.tien_tich_luy %></td>
                        <td><%= khachHang.cap_bac %></td>
                        <td>
                            <div class="d-flex gap-2 justify-content-center">
                                <button class="btn btn-success">Xem</button>
                                <button class="btn btn-warning">Cập nhật</button>
                                <button class="btn btn-danger">Xóa</button>
                            </div>
                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>

    <ul class="pagination justify-content-end pt-3" id="customer-pagination">
        <% const numberOfKhachHang = Math.ceil(khachHangCount / 8) %>
        <li class="page-item prev-btn"><a class="page-link" href="#">Trang trước</a></li>
        <li class="page-item page-item-btn active"><a class="page-link" href="#">1</a></li>
        <% for (let i = 1; i < numberOfKhachHang; i++) { %>
            <li class="page-item page-item-btn"><a class="page-link" href="#"><%= i + 1 %></a></li>
        <% } %>
        <li class="page-item next-btn"><a class="page-link" href="#">Trang sau</a></li>
    </ul>
</div>