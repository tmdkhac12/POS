<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="style.css" />
    <title>Admin Quản Lý Đánh Giá</title>
  </head>
  <body>
    <header>
      <nav>
        <ul class="menu-bar">
          <li><a href="/admin/quan-ly-nhan-vien">Quản Lý Nhân Viên</a></li>
          <li><a href="/admin/doanh-thu">Hóa Đơn</a></li>
          <li>
            <a href="/admin/danh-gia-khach-hang">Đánh Giá Của Khách Hàng</a>
          </li>
          <li><a href="/admin/sanpham">Quản Lý Sản Phẩm</a></li>
        </ul>
      </nav>
    </header>
    <section id="quan-ly-danh-gia">
      <h2>Quản Lý Đánh Giá Khách Hàng</h2>
      <div class="search-bar">
        <input
          type="text"
          id="search-input"
          placeholder="Tìm kiếm theo tên khách hàng hoặc mã đánh giá..."
        />
        <button id="search-button">Tìm kiếm</button>
      </div>
      <table>
        <thead>
          <tr>
            <th>MÃ ĐÁNH GIÁ</th>
            <th>TÊN KHÁCH HÀNG</th>
            <th>ĐIỂM ĐÁNH GIÁ</th>
            <th>BÌNH LUẬN</th>
            <th>NGÀY</th>
            <th>HÀNH ĐỘNG</th>
          </tr>
        </thead>
        <tbody>
          <% evaluations.forEach((evaluation) => { %>
          <tr>
            <td><%= evaluation.id_Danhgia %></td>
            <td><%= evaluation.Ten %></td>
            <td><%= evaluation.DiemDanhGia %></td>
            <td><%= evaluation.BinhLuan %></td>
            <td><%= evaluation.Ngay %></td>
            <td>
              <button class="btn-delete" data-id="<%= evaluation.id_Danhgia %>">
                Xóa
              </button>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
      <!-- Phân trang -->
      <div id="pagination" class="pagination">
        <% if (currentPage > 1) { %>
        <a href="/admin/danh-gia-khach-hang?page=<%= currentPage - 1 %>"
          >Previous</a
        >
        <% } %> <% for (let i = 1; i <= totalPages; i++) { %>
        <a
          href="/admin/danh-gia-khach-hang?page=<%= i %>"
          class="<%= i === currentPage ? 'active' : '' %>"
        >
          <%= i %>
        </a>
        <% } %> <% if (currentPage < totalPages) { %>
        <a href="/admin/danh-gia-khach-hang?page=<%= currentPage + 1 %>"
          >Next</a
        >
        <% } %>
      </div>
    </section>
  </body>
  <script src="main.js"></script>
</html>
