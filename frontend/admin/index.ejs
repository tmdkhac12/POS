<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin POS</title>

    <!-- BS5 CSS & Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">

    <!-- My CSS -->
    <link rel="stylesheet" href="/admin/css/style.css" />
    <link rel="stylesheet" href="/admin/css/category.css" />
    <link rel="stylesheet" href="/admin/css/product.css">

    <!-- BS5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" defer></script>
</head>

<body>
    <div class="container-fluid p-0">
        <div class="row g-0">
            <!-- Sidebar -->
            <div class="col-2 sidebar shadow">
                <%- include("./components/sidebar.ejs") %>
            </div>

            <!-- Content Section -->
            <div class="col-10 content-area p-3">
                <div class="tab-content">
                    <%- include("./components/productsTab.ejs") %>
                    <%- include("./components/invoiceTab.ejs") %>
                    <%- include("./components/customerTab.ejs")  %>
                    <%- include("./components/accountTab.ejs") %>
                    <%- include("./components/categoryTab.ejs") %>
                    <%- include("./components/tableTab.ejs") %>
                    <%- include("./components/discountTab.ejs") %>
                    <%- include("./components/statisticalTab.ejs") %>

                </div>
            </div>
        </div>
    </div>

    <!-- Logout modal -->
    <div class="modal fade" id="logoutModal" tabindex="-1" aria-labelledby="logoutModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header" style="background-color: #212529; color: #FFFFFF; border-bottom: none;">
                    <h5 class="modal-title" id="logoutModalLabel">Xác nhận đăng xuất</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body text-center py-4">
                    <i class="fas fa-sign-out-alt fa-3x text-secondary mb-3"></i>
                    <p class="mb-0">Bạn có chắc chắn muốn đăng xuất?</p>
                </div>
                <div class="modal-footer justify-content-center border-top-0">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="button" class="btn btn-primary text-white" style="background-color: #343A40; border-color: #343A40;" id="confirmLogout">Đồng ý</button>
                </div>
            </div>
        </div>
    </div>
    
    <!-- My JS -->
    <script src="/admin/js/category.js"></script>
    <script src="/admin/js/customer.js"></script>
    <script src="/admin/js/discount.js"></script>
    <script src="/admin/js/invoice.js"></script>
    <script src="/admin/js/product.js"></script>
    <script src="/admin/js/account.js"></script>
    <script src="/admin/js/table.js"></script>
    <script src="/admin/js/logout.js"></script>

    <script>
        document.querySelectorAll("form").forEach(form => {
            form.addEventListener('submit', (event) => {
                event.preventDefault();
            })
        })
    </script>
</body>

</html>