<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Quản lý Web Bán Thức Ăn Nhanh</title>

    <!-- BS5 CSS & Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">

    <!-- My CSS -->
    <link rel="stylesheet" href="/admin/css/style.css" />
    <link rel="stylesheet" href="/admin/css/category.css" />
    <link rel="stylesheet" href="/admin/css/product.css">

    <!-- BS5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" defer></script>
</head>

<body>
    <div class="container-fluid p-0">
        <div class="row g-0">
            <!-- Sidebar -->
            <div class="col-2 sidebar shadow">
                <%- include("./components/sidebar.ejs") %>
            </div>

            <!-- Content Section -->
            <div class="col-10 content-area p-3">
                <div class="tab-content">
                    <%- include("./components/productsTab.ejs") %>
                    <%- include("./components/invoiceTab.ejs") %>
                    <%- include("./components/customerTab.ejs")  %>
                    <%- include("./components/accountTab.ejs") %>
                    <%- include("./components/categoryTab.ejs") %>
                    <%- include("./components/tableTab.ejs") %>
                    <%- include("./components/discountTab.ejs") %>
                    <%- include("./components/statisticalTab.ejs") %>

                </div>
            </div>
        </div>
    </div>

    <!-- My JS -->
    <script src="/admin/js/category.js"></script>
    <script src="/admin/js/customer.js"></script>
    <script src="/admin/js/discount.js"></script>
    <script src="/admin/js/invoice.js"></script>
    <script src="/admin/js/product.js"></script>
    <script src="/admin/js/account.js"></script>
    <script src="/admin/js/table.js"></script>

    <script>
        document.querySelectorAll("form").forEach(form => {
            form.addEventListener('submit', (event) => {
                event.preventDefault();
            })
        })
    </script>
</body>

</html>