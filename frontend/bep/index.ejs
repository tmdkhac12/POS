<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bếp</title>

    <!-- BS5 Libs -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" defer></script>

    <!-- My CSS -->
    <link rel="stylesheet" href="/bep/css/style.css">
    <link rel="stylesheet" href="/bep/css/logout.css">
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Cột trái: Thông tin món ăn -->
            <div class="col-4 p-3 left-column">
                <h5 id="table-title"><%= bans[0].ten_ban %></h5>
                <div class="order-content">
                    <ul class="list-group" id="order-list">
                        <!-- JS sẽ render dữ liệu món ăn -->

                    </ul>
                </div>
                <div class="save-button">
                    <button class="btn btn-primary w-100" id="save-button">Xác nhận</button>
                </div>
            </div>

            <!-- Cột phải: Thông tin bàn -->
            <div class="col-8 p-3 right-column">
                <!-- Header -->
                <div class="row mb-3">
                    <div class="col">
                        <h5>Danh sách bàn</h5>
                    </div>
                    <div class="col text-end">
                        <button class="btn btn-dark" data-bs-toggle="modal" data-bs-target="#logoutModal">Đăng Xuất</button>
                    </div>

                    <!-- Logout modal -->
                    <div class="modal fade" id="logoutModal" tabindex="-1" aria-labelledby="logoutModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content">
                                <div class="modal-header" style="background-color: #212529; color: #FFFFFF; border-bottom: none;">
                                    <h5 class="modal-title" id="logoutModalLabel">Xác nhận đăng xuất</h5>
                                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body text-center py-4">
                                    <i class="fas fa-sign-out-alt fa-3x text-secondary mb-3"></i>
                                    <p class="mb-0">Bạn có chắc chắn muốn đăng xuất?</p>
                                </div>
                                <div class="modal-footer justify-content-center border-top-0">
                                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Hủy</button>
                                    <button type="button" class="btn btn-primary text-white" style="background-color: #343A40; border-color: #343A40;" id="confirmLogout">Đồng ý</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Danh sách bàn -->
                <div class="row g-3">
                    <!-- EJS sẽ render danh sách bàn -->
                    <% for (const ban of bans) { %>
                        <div class="col-3">
                            <div class="card shadow-sm table-card" data-table-id="<%= ban.ma_ban %>" data-status="<%= ban.trang_thai === "Trống" ? "empty" : "occupied" %>">
                                <div class="card-header d-flex justify-content-between">
                                    <p class="card-text m-0 fw-light"><%= ban.trang_thai === "Trống" ? "Bàn trống" : "Đang sử dụng" %></p>
                                    <a href="#" class="stretched-link">
                                        <i style="font-size:16px" class="fa fas fa-chevron-right"></i>
                                    </a>
                                </div>
                                <div class="card-body py-5">
                                    <p class="card-text text-center table-name"><%= ban.ten_ban %></p>
                                </div>
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <div id="dishes-data-json" style="display:none;"><%- JSON.stringify(dishes) %></div>

    <!-- My JS -->
    <script src="/bep/js/main.js"></script>
    <script src="/bep/js/logout.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/bep/js/socket.js"></script>
</body>

</html>